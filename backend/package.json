{
  "name": "@pipenotify/backend",
  "version": "1.0.1",
  "description": "Pipedrive â†’ Google Chat Integration Backend - Railway hosted Node.js service with OAuth 2.0 compliance for Pipedrive Marketplace",
  "main": "server.js",
  "scripts": {
    "start": "./start.sh",
    "start:direct": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "node scripts/migrate.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "jest": {
    "testEnvironment": "node",
    "forceExit": true,
    "detectOpenHandles": true,
    "testTimeout": 10000,
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!tests/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "keywords": [
    "pipedrive",
    "google-chat",
    "webhook",
    "oauth2",
    "railway",
    "marketplace",
    "notifications"
  ],
  "author": "Pipenotify Team",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@sentry/node": "^10.10.0",
    "axios": "^1.11.0",
    "bullmq": "^5.58.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "pg": "^8.16.3",
    "stripe": "^17.6.0"
  },
  "devDependencies": {
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "supertest": "^7.1.4"
  }
}
