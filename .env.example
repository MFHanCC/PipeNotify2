# Environment Configuration Template for Pipenotify2
# Copy this file to .env and set appropriate values for your environment

# ========================================
# ENVIRONMENT SETTINGS
# ========================================
NODE_ENV=development

# ========================================  
# FEATURE FLAGS
# ========================================
# Enable debug endpoints (development only)
ENABLE_DEBUG_ENDPOINTS=true

# Enable test routes (development only)  
ENABLE_TEST_ROUTES=true

# Logging level (error, warn, info, debug)
LOG_LEVEL=debug

# ========================================
# DATABASE & CACHE
# ========================================
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/pipenotify

# Redis connection string
REDIS_URL=redis://localhost:6379

# ========================================
# PIPEDRIVE INTEGRATION
# ========================================
# OAuth 2.0 credentials from Pipedrive Developer Console
PIPEDRIVE_CLIENT_ID=your_client_id_here
PIPEDRIVE_CLIENT_SECRET=your_client_secret_here
PIPEDRIVE_REDIRECT_URI=https://your-domain.com/api/v1/oauth/callback

# Legacy API token (for testing)
PIPEDRIVE_API_TOKEN=your_legacy_token_here

# ========================================
# SECURITY
# ========================================
# JWT secret for token signing
JWT_SECRET=your_secure_random_string_here

# Webhook secret for Pipedrive webhook validation
WEBHOOK_SECRET=your_webhook_secret_here

# ========================================
# FRONTEND CONFIGURATION
# ========================================
# Frontend URL for CORS and redirects
FRONTEND_URL=http://localhost:3000

# ========================================
# MONITORING & LOGGING  
# ========================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# ========================================
# DEPLOYMENT (Production Only)
# ========================================
# Port override (usually set by hosting provider)
PORT=8080

# Railway specific
# RAILWAY_PUBLIC_DOMAIN=your-app.railway.app

# Vercel specific  
# REACT_APP_API_URL=https://your-backend.railway.app

# ========================================
# HEARTBEAT MONITORING
# ========================================
# Enable heartbeat monitoring (auto-enabled in production)
ENABLE_HEARTBEAT=false

# Default company ID for system notifications
DEFAULT_COMPANY_ID=0

# Test company ID for frontend testing
REACT_APP_TEST_COMPANY_ID=12345

# ========================================
# BILLING & SUBSCRIPTIONS
# ========================================
# Enterprise-level company ID  
ENTERPRISE_COMPANY_ID=

# Stripe configuration
STRIPE_SECRET_KEY=
STRIPE_PRICE_STARTER=
STRIPE_PRICE_PRO=
STRIPE_PRICE_TEAM=

# ========================================
# STARTUP CONFIGURATION
# ========================================
# Startup delay in seconds (allows services to initialize)
STARTUP_DELAY=3
